.cards
    position absolute
    height 45%
    bottom 30px
    right 40px
    width 25%
    background-color #fff
    box-shadow -2px 2px 5px 2px rgba(0,0,0,0.3)
    overflow hidden
    .panel-footer
        height 60px
        text-align center
    .panel-body
        height calc(100% - 60px)
        position relative
    .card
        display inline-block
        position absolute
        top 10px
        right 15px
        left 15px
        bottom 30px
        opacity 1
        margin 0
        overflow auto
        transition left 0.4s ease 0s, right 0.4s ease 0s, opacity 0.4s ease 0s
        &.left
            left -100%
            right 100%
            opacity 0
            transition left 0.4s ease 0s, right 0.4s ease 0s, opacity 0.4s ease 0s
        &.right
            left 100%
            right -100%
            opacity 0
            transition left 0.4s ease 0s, right 0.4s ease 0s, opacity 0.4s ease 0s
        .card-row
            width 100%
    .page-info
        height 30px
        position absolute
        bottom 0
        left 5px
        right 5px
        text-align center
    .btn-circle
        z-index 10
        background-color #4285f4
        color #fff
        width 30px
        height 30px
        text-align center
        padding 6px 0
        font-size 12px
        line-height 1.42
        border-radius 15px
        border-color #4285f4
        position absolute
        top 0
        right 0


.transparent-header
    position absolute
    height 30px
    bottom 8%
    right 3%
    width 30px
    background-color transparent
    overflow hidden
    .btn-circle
        z-index 10
        background-color #4285f4
        color #fff
        width 30px
        height 30px
        text-align center
        padding 6px 0
        font-size 12px
        line-height 1.42
        border-radius 15px
        border-color #4285f4
        position absolute
        top 0
        right 0
